<!DOCTYPE html>
<html lang="en">

<%- include('includes/head'); -%>

<body>
    <%- include('includes/header'); -%>

    <main>

        <h1 id="loading">Een moment geduld alsjeblieft... De map wordt ingeladen!</h1>
        <noscript>
            <h1 id="notloading">Oeps de map laad niet in. Zet je JavaScript aan voor de map!</h1>
        </noscript>

        <div id='map'></div>

        <section>
            <div class="container">
                <input id="search" class="search" type="text" placeholder="Zoek een land" />

                <div class="dropdown" id="filter">
                    Choose a region
                    <ul>
                        <li>All</li>
                        <li>Africa</li>
                        <li>Americas</li>
                        <li>Asia</li>
                        <li>Europe</li>
                        <li>Oceania</li>

                    </ul>
                </div>
                <div class="dropdown" id="filter2">
                    Choose a language
                    <ul>
                        <li>All</li>
                        <li>Albanian</li>
                        <li>Arabic</li>
                        <li>Armenian</li>
                        <li>Bulgarian</li>
                        <li>Catalan</li>
                        <li>Czech</li>
                        <li>Dutch</li>
                        <li>English</li>
                        <li>French</li>
                        <li>German</li>
                        <li>Japanese</li>
                        <li>Pashto</li>
                        <li>Portuguese</li>
                        <li>Spanish</li>
                        <li>Swedish</li>
                        <li>Vietnamese</li>
                    </ul>
                </div>
            </div>
        </section>

        <section>

            <h3 class="cssfilter">Welke regio's wil je weg filteren?</h3>
            <input type="checkbox" name="inputbutton" value="Africa" id="Africa" class="cssfilter">
            <label for="Africa" class="cssfilter">Africa</label>
            <input type="checkbox" name="inputbutton" value="Americas" id="Americas" class="cssfilter">
            <label for="Africa" class="cssfilter">Americas</label>
            <input type="checkbox" name="inputbutton" value="Asia" id="Asia" class="cssfilter">
            <label for="Africa" class="cssfilter">Asia</label>
            <input type="checkbox" name="inputbutton" value="Europe" id="Europe" class="cssfilter">
            <label for="Africa" class="cssfilter">Europe</label>
            <input type="checkbox" name="inputbutton" value="Oceania" id="Oceania" class="cssfilter">
            <label for="Africa" class="cssfilter">Oceania</label>

            <h3 class="cssfilter">Welke talen wil je weg filteren?</h3>
            <input type="checkbox" name="inputbuttontaal" value="Albanian" id="Albanian" class="cssfilter">
            <label for="Albanian" class="cssfilter">Albanian</label>
            <input type="checkbox" name="inputbuttontaal" value="Arabic" id="Arabic" class="cssfilter">
            <label for="Arabic" class="cssfilter">Arabic</label>
            <input type="checkbox" name="inputbuttontaal" value="Armenian" id="Armenian" class="cssfilter">
            <label for="Armenian" class="cssfilter">Armenian</label>
            <input type="checkbox" name="inputbuttontaal" value="Bulgarian" id="Bulgarian" class="cssfilter">
            <label for="Bulgarian" class="cssfilter">Bulgarian</label>
            <input type="checkbox" name="inputbuttontaal" value="Catalan" id="Catalan" class="cssfilter">
            <label for="Catalan" class="cssfilter">Catalan</label>
            <input type="checkbox" name="inputbuttontaal" value="Czech" id="Czech" class="cssfilter">
            <label for="Czech" class="cssfilter">Czech</label>
            <input type="checkbox" name="inputbuttontaal" value="Dutch" id="Dutch" class="cssfilter">
            <label for="Dutch" class="cssfilter">Dutch</label>
            <input type="checkbox" name="inputbuttontaal" value="English" id="English" class="cssfilter">
            <label for="English" class="cssfilter">English</label>
            <input type="checkbox" name="inputbuttontaal" value="French" id="French" class="cssfilter">
            <label for="French" class="cssfilter">French</label>
            <input type="checkbox" name="inputbuttontaal" value="German" id="German" class="cssfilter">
            <label for="German" class="cssfilter">German</label>
            <input type="checkbox" name="inputbuttontaal" value="Japanese" id="Japanese" class="cssfilter">
            <label for="Japanese" class="cssfilter">Japanese</label>
            <input type="checkbox" name="inputbuttontaal" value="Pashto" id="Pashto" class="cssfilter">
            <label for="Pashto" class="cssfilter">Pashto</label>
            <input type="checkbox" name="inputbuttontaal" value="Portuguese" id="Portuguese" class="cssfilter">
            <label for="Portuguese" class="cssfilter">Portuguese</label>
            <input type="checkbox" name="inputbuttontaal" value="Spanish" id="Spanish" class="cssfilter">
            <label for="Spanish" class="cssfilter">Spanish</label>
            <input type="checkbox" name="inputbuttontaal" value="Swedish" id="Swedish" class="cssfilter">
            <label for="Swedish" class="cssfilter">Swedish</label>
            <input type="checkbox" name="inputbuttontaal" value="Vietnamese" id="Vietnamese" class="cssfilter">
            <label for="Vietnamese" class="cssfilter">Vietnamese</label>

            <div class="container countries" id="countries">

                <% countries.forEach((country) => { %>

                <article data-type="<%= country.region %>" value="<%= country.languages[0].name %>" class="card">
                    <form action="/mijnlijst" method="post">
                        <div>
                            <img src=<%= country.flag %> alt="vlag">
                        </div>

                        <div class="card-body">
                            <h2 class="country-name"><%= country.name %></h2>
                            <p class="country-region"><strong>Regio:</strong>
                                <%= country.region %>
                            </p>
                            <p class="country-language"><strong>Taal:</strong>
                                <%= country.languages[0].name %>
                            </p>
                            <label for="land">Land:</label>
                            <input type="text" name="land" id="land" value="<%= country.name %>">

                            <label for="populatie">Populatie:</label>
                            <input type="text" name="populatie" id="populatie" value="<%= country.population %>">

                            <label for="regio">Regio:</label>
                            <input type="text" name="regio" id="regio" value="<%= country.region %>">

                            <label for="capital">Hoofdstad:</label>
                            <input type="text" name="capital" id="capital" value="<%= country.capital %>">

                            <label for="language">Taal:</label>
                            <input type="text" name="language" id="language" value="<%= country.languages[0].name %>">


                        </div>
                        <input type="submit" value="Submit">
                    </form>

                </article>

                <% }) %>

            </div>
        </section>



    </main>
    <script src="/scripts/script.js"></script>
    <script src='https://api.mapbox.com/mapbox-gl-js/v2.3.1/mapbox-gl.js'></script>
    <script src="https://api.mapbox.com/mapbox-gl-js/plugins/mapbox-gl-geocoder/v5.0.0/mapbox-gl-geocoder.min.js">
    </script>
    <script src="/scripts/map.js"></script>

</body>

</html>